<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
  </head>
  <body>
    <nav>
      <ul>
        <li><a class="active" href="/">Home</a></li>
        <li><a href="/upload-file">Upload File</a></li>
      </ul>
    </nav>

    <div class="container">
      <div class="title"><h1>Bảng</h1></div>

      <table class="w3-table-all w3-hoverable table">
        <thead>
          <tr class="w3-light-grey">
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < dataUser.length; i++) { %>
          <tr>
            <td><%= dataUser[i].ID %></td>
            <td><%= dataUser[i].firstName %></td>
            <td><%= dataUser[i].lastName %></td>
            <td>
              <div class="action-column">
                <a href="/Detail/user/<%= dataUser[i].ID %>" target="_blank">
                  Detail
                </a>

                <form action="edit-user/<%= dataUser[i].ID %>" method="get">
                  <button class="btn" type="submit">Edit</button>
                </form>

                <form action="/delete-user" method="post">
                  <input
                    type="text"
                    hidden
                    value="<%= dataUser[i].ID %>"
                    name="userID"
                  />
                  <button class="btn" type="submit">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <div class="form-control">
        <form action="/add-new-user" class="form" method="post">
          <h3><b>Thêm mới</b></h3>
          <div class="form-row">
            <label for="inputFirstName" class="form-label">FirstName:</label
            ><br />
            <input type="text" name="firstName" />
          </div>
          <div class="form-row">
            <label for="inputLastName" class="form-label">LastName:</label
            ><br />
            <input type="text" name="lastName" />
          </div>
          <div class="form-row">
            <label for="inputEmail" class="form-label">Email:</label><br />
            <input type="email" name="email" />
          </div>
          <div class="form-row">
            <label for="inputAddress" class="form-label">Address:</label><br />
            <input type="text" name="address" />
          </div>
          <div class="form-row">
            <button class="btn" type="submit">Add</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
